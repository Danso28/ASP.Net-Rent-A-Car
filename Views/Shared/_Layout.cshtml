<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title  Rent-A-Car</title>
    <link href="~/Content/materialize.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    @RenderSection("links", false)
</head>
<body>
    <nav class="green darken-2 navbar-fixed nav">
        <div class="nav-wrapper">
            @Html.ActionLink("Rent-A-Car", "Index", "Home", new { area = "" }, new { @class = "brand-logo" })
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul class="right hide-on-med-and-down">
                <li>
                    <a href=" @Url.Action("ShowAllCars", "Home")">Return Car</a>
                </li>

            </ul>
        </div>
    </nav>


    <ul class="sidenav" id="mobile-demo">
        <li>
            <a href=" @Url.Action("ShowAllCars", "Home")">Return Car</a>
        </li>

    </ul>

    <div class="">
        @RenderBody()
        
    </div>
    <footer class="page-footer green darken-2">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Car-Rental</h5>
                    <p class="grey-text text-lighten-4">You can get a Car</p>
                </div>
                <div class="col l4 offset-l2 s12">
                    <h5 class="white-text"></h5>

                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                &copy; @DateTime.Now.Year

            </div>
        </div>
    </footer>



    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/materialize.min.js"></script>
    <script src="~/Scripts/script.js"></script>

</body>
</html>
