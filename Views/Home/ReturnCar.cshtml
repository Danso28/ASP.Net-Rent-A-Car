
@{
    ViewBag.Title = "Return the Car";
}

<h2>Returning the Car</h2>

    @if (ViewBag.AlertMsgP != null)
    {
        for (int i = 0; i < ViewBag.AlertMsgP.Count; i++)
        {
            <h3 style="color:red">@i </h3>
        }
        
    }
 

<form action="ProcessConformation" method="post">
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Conformation Numbers</span>
                    <input id="input_text" type="text" data-length="10" maxlength="10" name="conformation">
                </div>
                <div class="card-action">
                    <button class="btn waves-effect waves-light yellow darken-2 black-text" type="submit" name="action">
                        Make a Reservation
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </div>
    </div>

</form>
