
@{
    ViewBag.Title = "Conformation";
}



@if (ViewBag.AlertMsgC != null)
{
    <h3>Conformation Number: @ViewBag.AlertMsgC </h3>
}

<div class="row">

    <div class="col s12 m6">

        @foreach (var f in ViewBag.Conformation)
        {
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">@f.CustomerFirstName &nbsp @f.CustomerLastName </span>
                    <p>
                        You have confimed this car with this @f.CustomerEmail email.
                        Your pick-up date is @f.CustomerPickUp and your drop-off date is @f.CustomerDropOff .
                    </p>

                    <p>
                        The car package choosen is a @f.CarType and the estimated cost is $@f.CarFee.

                    </p>

                </div>

                <div class="card-action">

                    <a href="@Url.Action("Return", "Home")">Return to </a>

                </div>
            </div>
        }

    </div>
</div>